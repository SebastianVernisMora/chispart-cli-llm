  "shortcuts": [
    {
      "name": "Nuevo Chat",
      "short_name": "Chat",
      "description": "Iniciar una nueva conversación con IA",
      "url": "/chat",
      "icons": [
        {
          "src": "/static/icons/shortcut-chat.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Configuración",
      "short_name": "Config",
      "description": "Configurar API keys y preferencias",
      "url": "/config",
      "icons": [
        {
          "src": "/static/icons/shortcut-config.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Análisis de Imagen",
      "short_name": "Imagen",
      "description": "Analizar imagen con IA",
      "url": "/chat?action=image",
      "icons": [
        {
          "src": "/static/icons/shortcut-image.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/chat",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+chispart",
      "url": "/chat?text=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "prefer_related_applications": false,
  "related_applications": [],
  "iarc_rating_id": "",
  "file_handlers": [
    {
      "action": "/chat",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".bmp", ".svg"],
        "text/plain": [".txt", ".md"],
        "application/pdf": [".pdf"]
      }
    }
  ]
}
