{
  "name": "Chispart Mobile - Terminal Universal de IA",
  "short_name": "Chispart Mobile",
  "description": "Terminal universal de IA optimizado para dispositivos móviles. Accede a múltiples APIs de IA desde una sola interfaz segura.",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#1a1a1a",
  "background_color": "#1a1a1a",
  "scope": "/",
  "lang": "es",
  "dir": "ltr",
  "categories": ["productivity", "utilities", "developer"],
